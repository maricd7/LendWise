// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id            Int     @id @default(autoincrement())
  title         String
  author        String
  publishedYear Int
  genre         String
  isbn          String
  available     Boolean
  image         String
  lender        String
}